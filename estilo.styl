@import 'nib'
body
	margin-top: 7em;
	
.container
	max-width: none !important
	width: 970px
	
article.container
	margin-top: 1em
	margin-left: 22em
	display: inline-block

center>h2
	margin-top: 30px
	
#sidebar-wrapper
	z-index: 1000
	position: fixed
	left: 250px
	width: 0
	height: 100%
	margin-left: -250px
	background: #000
	transition: all 0.5s ease


.sidebar-nav
	height: calc(100% - 7em)
	position: absolute
	width: 250px
	margin: 0
	padding: 0
	list-style: none
	box-shadow: 3px 0px 5px #888888
	background: aliceblue;


.sidebar-nav li
	text-indent: 20px
	line-height: 40px


.sidebar-nav li a
	display: block
	text-decoration: none
	color: #A00087


.sidebar-nav li a:hover 
	text-decoration: none
	color: #6D0000
	background: rgba(255,255,255,0.2)


.sidebar-nav li a
	&active 
	&focus
		text-decoration: none


.sidebar-nav > .sidebar-brand 
	height: 65px
	font-size: 18px
	line-height: 60px


.sidebar-nav > .sidebar-brand a
	color: #999

.sidebar-nav > .sidebar-brand a:hover
	color: #999